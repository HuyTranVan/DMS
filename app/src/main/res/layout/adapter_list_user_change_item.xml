<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_user_change_item_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@drawable/btn_none_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_user_change_item_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/ic_user"
        app:civ_border_width="2dp"
        app:civ_border_overlay="true"
        app:civ_fill_color="@color/colorWhite"
        app:civ_border_color="@color/colorLightGrey"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/list_user_change_item_image"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.75"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/list_user_change_item_role_parent"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/list_user_change_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tran van A"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/list_user_change_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_user_change_item_role_parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/list_user_change_item_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/list_user_change_item_role_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_awesome"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:padding="@dimen/_10sdp"
                android:text="@string/icon_x"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>



    </RelativeLayout>

    <View
        android:id="@+id/seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>