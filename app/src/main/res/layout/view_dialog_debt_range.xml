<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_debtrange_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorBlue"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black_text_color_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nhập giới hạn thời gian công nợ (ngày)"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            android:textColor="@color/black_text_color_hint"
            />

    </LinearLayout>

    <wolve.dms.customviews.CInputForm
        android:id="@+id/dialog_debtrange_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:textHint="Thời gian công nợ"
        app:iconText="@string/icon_calendar"
        app:iconColor="@color/black_text_color_hint"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:importantForAutofill="no"/>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/view_bottom_dialog_button" />


</LinearLayout>
