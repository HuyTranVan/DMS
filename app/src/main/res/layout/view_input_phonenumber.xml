<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/input_phonenumber_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.85"
            android:orientation="horizontal"
            android:background="@drawable/colorwhite_borderred_corner">


            <EditText
                android:id="@+id/input_phonenumber_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_text_color"
                android:inputType="number"
                android:hint="Nhập số điện thoại"
                android:textColorHint="@color/black_text_color_hint"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/_1sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:imeOptions="actionDone"
                android:windowSoftInputMode="adjustPan"
                android:isScrollContainer="true"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/input_phonenumber_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.3"
            android:background="@drawable/btn_confirm_blue"
            android:src="@drawable/ic_arrow_forward_white_18dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="@dimen/_4sdp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



