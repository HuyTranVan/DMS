<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productunit_item_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">

        <EditText
            android:id="@+id/productunit_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_text_color"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/productunit_item_delete"/>

<!--        <TextView-->
<!--            android:id="@+id/productunit_item_clear"-->
<!--            android:layout_width="@dimen/_30sdp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="?selectableItemBackgroundBorderless"-->
<!--            android:fontFamily="@font/font_awesome"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/icon_close"-->
<!--            android:textColor="@color/black_text_color"-->
<!--            android:textSize="@dimen/_12sdp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_toLeftOf="@+id/productunit_item_edit"-->
<!--            android:visibility="gone"/>-->

        <TextView
            android:id="@+id/productunit_item_edit"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/font_awesome"
            android:gravity="center"
            android:text="@string/icon_edit_pen"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/productunit_item_delete"/>

        <TextView
            android:id="@+id/productunit_item_delete"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/font_awesome"
            android:gravity="center"
            android:text="@string/icon_delete"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <View
        android:id="@+id/productunit_item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/colorLightGrey"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

</LinearLayout>