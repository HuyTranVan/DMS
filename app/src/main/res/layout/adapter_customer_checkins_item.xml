<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkins_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/checkins_item_number"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_oval_grey"
            android:text="99"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/checkins_item_content_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/checkins_item_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textColor="@color/black_text_color_hint"
                    android:textSize="@dimen/_8sdp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/checkins_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textColor="@color/colorMain"
                    android:textSize="@dimen/_8sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/checkins_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp" />

            <!--<TextView-->
                <!--android:id="@+id/checkins_item_time"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Default"-->
                <!--android:textColor="@color/black_text_color_hint"-->
                <!--android:textSize="@dimen/_8sdp"/>-->









        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/checkins_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"/>

</RelativeLayout>
