<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/dialog_choice_product_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_header_top"
        android:text="CHỌN SẢN PHẨM"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black_text_color"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/dialog_choice_product_radiogroup"
        android:layout_below="@+id/dialog_choice_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        android:orientation="horizontal"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_choice_product_rvProduct"
        android:layout_below="@+id/dialog_choice_product_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"/>

    <LinearLayout
        android:id="@+id/dialog_choice_product_submit_parent"
        android:layout_below="@+id/dialog_choice_product_rvProduct"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_5sdp">

        <Button
            android:id="@+id/dialog_choice_product_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_cancel_grey"
            android:textColor="@color/colorWhite"
            android:text="HỦY"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

        <Button
            android:id="@+id/dialog_choice_product_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_confirm_blue"
            android:textColor="@color/colorWhite"
            android:text="HOÀN TẤT"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"/>

    </LinearLayout>




</RelativeLayout>