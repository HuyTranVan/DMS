<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/dialog_choice_status_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_header_top"
        android:text="CHỌN SẢN PHẨM"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color"
        android:gravity="center"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_choice_status_rvStatus"
        android:layout_below="@+id/dialog_choice_status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clipToPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/dialog_choice_status_rvStatus">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.5"
            android:background="?selectableItemBackground"
            android:textColor="@color/black_text_color_hint"
            android:text="Hủy"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_gravity="center"/>

    </LinearLayout>



    <!--<include android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_below="@+id/dialog_choice_status_rvStatus"-->
        <!--layout="@layout/view_bottom_dialog_button"/>-->


</RelativeLayout>