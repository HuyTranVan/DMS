<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_list_method_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp"
    android:background="?selectableItemBackground"
    tools:ignore="WebViewLayout"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/font_awesome"                    android:id="@+id/list_method_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:textColor="@color/black_text_color_hint"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/icon_close"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/list_method_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="Tân Bình"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_15sdp"/>



        </LinearLayout>



        <TextView
            android:id="@+id/list_method_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>

