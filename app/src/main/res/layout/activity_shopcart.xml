<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/customer_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_header_top">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_18dp"
            android:padding="@dimen/_8sdp"
            android:background="?selectableItemBackground"/>

        <TextView
            android:id="@+id/cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CỬA HÀNG"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black_text_color"
            android:layout_centerInParent="true"/>

        <wolve.dms.controls.CTextView
            android:id="@+id/icon_more"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:text="@string/icon_trash"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:background="?selectableItemBackground"
            android:layout_alignParentRight="true"
            app:customFont="@string/font_awesome"/>

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/cart_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:checkedButton="@+id/cart_radiobutton_cash">

        <RadioButton
            android:id="@+id/cart_radiobutton_cash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/toggle_widget_background"
            android:text="Tiền mặt"
            android:textSize="@dimen/_12sdp"
            android:textColor="@drawable/text_white_selected"
            android:button="@null"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/cart_radiobutton_debt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/toggle_widget_background"
            android:layout_weight="0.5"
            android:text="Công nợ"
            android:textSize="@dimen/_12sdp"
            android:textColor="@drawable/text_white_selected"
            android:button="@null"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:gravity="center"/>

    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cart_rvproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/cart_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:minWidth="@dimen/_150sdp"
        android:background="@drawable/btn_add_new"
        android:layout_margin="@dimen/_10sdp"
        android:text="CẬP NHẬT"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>



