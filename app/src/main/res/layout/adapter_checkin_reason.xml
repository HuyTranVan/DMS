<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkin_reason_parent"
    android:orientation="vertical"
    android:layout_width="@dimen/_180sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/colorwhite_pressed">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <CheckBox
            android:id="@+id/checkin_reason_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/checkin_reason_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_10sdp"
            android:layout_toRightOf="@+id/checkin_reason_checkbox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#0d000000"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"/>

</LinearLayout>