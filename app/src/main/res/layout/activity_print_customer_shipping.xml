<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_text_color_hint"
    android:clickable="true"
    android:keepScreenOn="true"
    android:id="@+id/print_customer_shipping_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/print_customer_shipping_content_parent"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/print_customer_shipping_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="--Thông tin gửi hàng--"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/font_awesome"
                android:text="Công ty"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/font_awesome"
                android:text="Dia chi"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/font_awesome"
                android:text="Người gửi"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/font_awesome"
                android:text="Hotline"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:gravity="right"
                android:text="--Thông tin nhận hàng--"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/font_awesome"
                android:gravity="right"
                android:text="Công ty"
                android:textAllCaps="true"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_shopaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/font_awesome"
                android:gravity="right"
                android:text="Dia chi"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/print_customer_shipping_shopowner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/font_awesome"
                android:gravity="right"
                android:text="Người gửi"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp" />

<!--            <TextView-->
<!--                android:id="@+id/print_customer_shipping_shopphone"-->
