<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/printbill_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/colorwhite_pressed"
    android:paddingTop="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/debt_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="San pham"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/debt_item_paid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:hint="0"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/debt_item_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="0"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:gravity="center_vertical|right"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#0d000000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>