<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/customer_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/customer_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <HorizontalScrollView
                android:id="@+id/customer_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:paddingLeft="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp">

                    <wolve.dms.customviews.CButtonVertical
                        android:id="@+id/customer_info_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:iconText="@string/icon_phone"
                        app:text="Gọi điện"
                        app:textColor="@color/black_text_color_hint"
                        app:iconColor="@color/colorWhite"
                        app:backgroundIcon="@drawable/btn_round_grey"
                        android:layout_marginRight="@dimen/_20sdp"/>

                    <wolve.dms.customviews.CButtonVertical
                        android:id="@+id/customer_info_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:iconText="@string/icon_direction"
                        android:layout_marginRight="@dimen/_20sdp"
                        app:text="Chỉ đường"
                        app:iconColor="@color/black_text_color_hint"
                        app:textColor="@color/black_text_color_hint"
                        app:backgroundIcon="@drawable/btn_round_border_grey"/>

                    <wolve.dms.customviews.CButtonVertical
                        android:id="@+id/customer_info_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:iconText="@string/icon_print"
                        android:layout_marginRight="@dimen/_20sdp"
                        app:text="In hđ nợ"
                        app:iconColor="@color/black_text_color_hint"
                        app:textColor="@color/black_text_color_hint"
                        app:backgroundIcon="@drawable/btn_round_border_grey"/>

                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:id="@+id/input_data_underline"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/colorGrey"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent">

                    <wolve.dms.libraries.CustomSwitchButton
                        android:id="@+id/customer_info_switch"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                        app:sb_checked_color="@color/colorBlue"
                        app:sb_uncheckcircle_color="@color/black_text_color"
                        app:sb_checked="false"
                        app:sb_show_indicator="false"
                        app:sb_background="@color/black_text_color_hint"
                        />

                    <View
                        android:id="@+id/customer_info_switch_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@color/float_transparent"/>

                </FrameLayout>


                <TextView
                    android:id="@+id/customer_info_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khách hàng có thiện chí"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_grey_corner"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_10sdp">

                <RadioGroup
                    android:id="@+id/customer_info_shoptype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_5sdp">


                    <RadioButton
                        android:id="@+id/customer_info_repair"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:minWidth="@dimen/_50sdp"
                        android:button="@null"
                        android:background="@drawable/btn_round_white_selected_grey"
                        android:checked="false"
                        android:textColor="@drawable/text_white_selected"
                        android:text="SỬA XE"
                        android:textSize="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/customer_info_wash"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:minWidth="@dimen/_50sdp"
                        android:button="@null"
                        android:background="@drawable/btn_round_white_selected_grey"
                        android:checked="false"
                        android:textColor="@drawable/text_white_selected"
                        android:text="RỬA XE"
                        android:textSize="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/customer_info_access"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:minWidth="@dimen/_50sdp"
                        android:button="@null"
                        android:background="@drawable/btn_round_white_selected_grey"
                        android:checked="false"
                        android:textColor="@drawable/text_white_selected"
                        android:text="PHỤ TÙNG"
                        android:textSize="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp" />

                    <RadioButton
                        android:id="@+id/customer_info_ser"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:minWidth="@dimen/_50sdp"
                        android:button="@null"
                        android:background="@drawable/btn_round_white_selected_grey"
                        android:checked="false"
                        android:textColor="@drawable/text_white_selected"
                        android:text="BẢO TRÌ"
                        android:textSize="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="@dimen/_30sdp"
                    android:background="@drawable/btn_round_white_selected_grey">

                    <TextView
                        android:id="@+id/customer_info_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_50sdp"
                        android:minHeight="@dimen/_20sdp"
                        android:background="@drawable/btn_round_border_blue"
                        android:textColor="@color/black_text_color_hint"
                        android:text="SỬA XE"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/customer_info_shopname_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Tên cửa hàng"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="textCapWords"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"/>
                </LinearLayout>



                </LinearLayout>

            <wolve.dms.customviews.CInputForm
                android:id="@+id/customer_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="textCapWords"
                app:textHint="Tên chủ tiệm"
                app:iconColor="@color/black_text_color_hint"
                app:iconText="@string/icon_username"/>

            <wolve.dms.customviews.CInputForm
                android:id="@+id/customer_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                app:textHint="Số điện thoại"
                app:iconText="@string/icon_phone"
                app:iconColor="@color/black_text_color_hint"/>

            <wolve.dms.customviews.CInputForm
                android:id="@+id/customer_info_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background="?selectableItemBackground"
                app:iconText="@string/icon_district"
                app:multiLine="true"
                app:textColor="@drawable/text_white_selected"
                app:textHint="Địa chỉ"
                app:iconColor="@color/black_text_color_hint"
                app:isShowBottomLine="true"/>

            <EditText
                android:id="@+id/add_customer_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_50sdp"
                android:background="@drawable/bg_white_corner_stroke_grey"
                android:contextClickable="false"
                android:gravity="top"
                android:imeOptions="actionNext"
                android:padding="@dimen/_5sdp"
                android:textColor="#3d3d3d"
                android:textSize="@dimen/_12sdp"
                android:hint="Nhập ghi chú cửa hàng"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textCapSentences|textMultiLine"/>

            <TextView
                android:id="@+id/customer_info_last_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black_text_color"
                android:textStyle="italic"
                android:textSize="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <LinearLayout
                android:id="@+id/customer_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?selectableItemBackground"
                android:padding="@dimen/_5sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử ghé cửa hàng"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_12sdp"
                    />

                <wolve.dms.customviews.CTextIcon
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_right"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>





