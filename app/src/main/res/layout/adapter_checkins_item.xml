<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/checkins_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/colorwhite_pressed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/checkins_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/checkins_item_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_2sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/checkins_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Default"
            android:textColor="@color/colorRed"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_10sdp"
            android:gravity="right"
            android:paddingRight="@dimen/_10sdp"/>

    </LinearLayout>

    <View
        android:id="@+id/checkins_item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>