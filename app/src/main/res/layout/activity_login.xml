<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:id="@+id/login_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.4">

                <ImageView
                    android:id="@+id/login_lnImage"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lub_logo_red"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUB SOLUTION DMS"
                    android:textSize="@dimen/_16sdp"
                    android:layout_below="@id/login_lnImage"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorRed"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_corner5_white_border2_red">

                        <wolve.dms.customviews.CTextIcon
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:gravity="center_vertical"
                            android:text="@string/icon_username"
                            android:textAlignment="center"
                            android:textColor="@color/black_text_icon"
                            android:textSize="@dimen/_16sdp"
                            app:textWhite="false" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/colorGrey"
                            android:layout_margin="@dimen/_4sdp"/>

                        <EditText
                            android:id="@+id/login_username"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:background="@color/text_color_white_hint"
                            android:hint="@string/login_username"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="@dimen/_12sdp" />

                        <wolve.dms.customviews.CTextIcon
                            android:id="@+id/login_keyboard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="?selectableItemBackground"
                            android:layout_weight="0.15"
                            android:textSize="@dimen/_14sdp"
                            android:text="@string/icon_keyboard"
                            android:gravity="center"
                            android:paddingRight="@dimen/_5sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_corner5_white_border2_red"
                        android:layout_marginTop="@dimen/_5sdp">

                        <wolve.dms.customviews.CTextIcon
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.15"
                            android:gravity="center_vertical"
                            android:text="@string/icon_password"
                            android:textAlignment="center"
                            android:textColor="@color/black_text_icon"
                            android:textSize="@dimen/_16sdp"
                            app:textWhite="false" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/colorGrey"
                            android:layout_margin="@dimen/_4sdp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.85"
                            android:paddingRight="5dp"
                            app:hintEnabled="false"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/black_text_color_hint">

                            <EditText
                                android:id="@+id/login_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/text_color_white_hint"
                                android:hint="@string/login_password"
                                android:padding="10dp"
                                android:textSize="@dimen/_12sdp"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:gravity="center_vertical"/>

                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>

                    <Button
                        android:id="@+id/login_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/btn_confirm_red"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/login_button_login"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"/>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LubSolution_DMS"
                    android:textSize="@dimen/_6sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>







        </LinearLayout>

    </ScrollView>

</RelativeLayout>



