<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/customer_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_header_top">

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_18dp"
                android:padding="@dimen/_8sdp"
                android:background="?selectableItemBackground"/>

            <TextView
                android:id="@+id/add_customer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CỬA HÀNG"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_text_color"
                android:layout_centerInParent="true"/>


            <wolve.dms.customviews.CTextIcon
                android:id="@+id/icon_more"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:text="@string/icon_trash"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:background="?selectableItemBackground"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/customer_paid_parent"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_below="@+id/customer_header">

            <TextView
                android:id="@+id/customer_paid_debt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textColor="@color/colorRed"
                android:text="con no"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/customer_paid_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textColor="@color/colorBlue"
                android:text="con no"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/customer_bill_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@drawable/btn_choice_grey"
                android:textColor="@drawable/text_white_selected"
                android:text="Xem chi tiết"
                android:textStyle="italic"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_5sdp"/>

        </LinearLayout>

        <View
            android:id="@+id/customer_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#75b9b3b3"
            android:layout_below="@+id/customer_paid_parent"/>

        <ScrollView
            android:id="@+id/customer_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_below="@+id/customer_line1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:clickable="true">

                <LinearLayout
                    android:id="@+id/customer_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/add_customer_map_parent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:focusableInTouchMode="false"
                        android:layout_below="@+id/customer_header">

                        <fragment
                            android:id="@+id/add_customer_map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            class="wolve.dms.customviews.WorkaroundMapFragment"/>

                        <ImageView
                            android:id="@+id/add_customer_marker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pin"
                            android:layout_centerInParent="true"/>


                        <wolve.dms.customviews.CTextIcon
                            android:id="@+id/add_customer_editlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:minWidth="@dimen/_30sdp"
                            android:background="@drawable/bg_red_rounded_button"
                            android:text="@string/icon_edit_map"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"/>


                        <com.github.clans.fab.FloatingActionButton
                            android:id="@+id/add_customer_currentlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_my_location_black_18dp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_above="@+id/add_customer_editlocation"
                            app:fab_size="mini"
                            app:fab_colorNormal="@color/colorWhite"
                            app:fab_colorPressed="@color/colorGrey"
                            android:alpha="0.7"
                            android:visibility="gone"/>


                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/customer_radiogroup_status"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/add_customer_map_parent"
                        android:background="@drawable/pink_out_line"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="9"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:checkedButton="@+id/customer_radio_status_interested">

                        <RadioButton
                            android:id="@+id/customer_radio_status_interested"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/toggle_widget_background_left"
                            android:text="Quan tâm"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@drawable/text_white_selected"
                            android:button="@null"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"/>

                        <RadioButton
                            android:id="@+id/customer_radio_status_nointerested"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/toggle_widget_background_center"
                            android:layout_weight="3"
                            android:text="0 quan tâm"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@drawable/text_white_selected"
                            android:button="@null"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="0.2dp"
                            android:layout_marginRight="0.2dp"
                            android:gravity="center"/>

                        <RadioButton
                            android:id="@+id/customer_radio_status_ordered"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/toggle_widget_background_right"
                            android:layout_weight="3"
                            android:text="Đã Order"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@drawable/text_white_selected"
                            android:button="@null"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:gravity="center"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:clickable="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_shoptype"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint="Rua xe"
                                    app:iconText="@string/icon_product"/>

                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrey"
                                    android:layout_margin="@dimen/_5sdp"/>

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_shopname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint=""
                                    app:iconText="@string/icon_home"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint="Tên chủ tiệm"
                                    app:iconText="@string/icon_username"/>

                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrey"
                                    android:layout_margin="@dimen/_5sdp"/>

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="number"
                                    app:textHint="Số điện thoại"
                                    app:iconText="@string/icon_phone"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_adress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint="Số nhà"
                                    app:iconText="@string/icon_flag"/>

                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrey"
                                    android:layout_margin="@dimen/_5sdp"/>

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_street"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint="Tên đường"
                                    app:iconText="@string/icon_adress"/>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_district"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapWords"
                                    app:textHint="Quận / Huyện"
                                    app:iconText="@string/icon_district"/>

                                <View
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorGrey"
                                    android:layout_margin="@dimen/_5sdp"/>

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="number"
                                    app:textHint="Thành phố"
                                    app:iconText="@string/icon_city"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <wolve.dms.customviews.CInputForm
                                    android:id="@+id/add_customer_note"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:inputType="textCapSentences"
                                    android:layout_toLeftOf="@+id/add_customer_dropdown"
                                    app:textHint="Ghi chú"
                                    app:iconText="@string/icon_comment"
                                    app:iconColor="@color/colorBlueTransparent"
                                    app:textColor="@color/colorBlue"
                                    app:textColorHint="@color/colorBlueTransparent"/>

                                <wolve.dms.customviews.CTextIcon
                                    android:id="@+id/add_customer_dropdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="?selectableItemBackground"
                                    android:text="@string/icon_down"
                                    android:padding="@dimen/_10sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"/>
                            </RelativeLayout>





                        </LinearLayout>

                        <Button
                            android:id="@+id/add_customer_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:minWidth="@dimen/_150sdp"
                            android:background="@drawable/btn_confirm_blue"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:text="CẬP NHẬT"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:layout_gravity="center_horizontal"/>



                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_customer_rvcheckin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/customer_main"/>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

