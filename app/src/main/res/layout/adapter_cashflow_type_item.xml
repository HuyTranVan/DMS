<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cftype_item_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        >

        <TextView
            android:fontFamily="@font/font_awesome"
            android:id="@+id/cftype_item_icon_default"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:text="@string/icon_protect"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorBlue"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="visible" />


        <TextView
            android:id="@+id/cftype_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/cftype_item_icon_default" />

        <TextView
            android:id="@+id/cftype_item_type_income"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:fontFamily="@font/font_awesome"
            android:layout_centerVertical="true"
            android:text="@string/icon_circle_up"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorBlue"
            android:gravity="center"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>


    <View
        android:id="@+id/productgroup_item_seperateline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"
        android:layout_marginLeft="@dimen/_30sdp"/>

</LinearLayout>