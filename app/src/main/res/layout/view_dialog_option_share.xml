<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_list_product_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner5_white">

    <LinearLayout
        android:id="@+id/header_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">

        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"
            android:background="@color/colorBlue"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black_text_color_hint"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chia sẻ qua "
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            android:textColor="@color/black_text_color_hint"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialog_option_share_body"
        android:layout_below="@+id/header_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/dialog_option_share_zalo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_zalo"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/dialog_option_share_print"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_printer"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/dialog_option_share_other"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_share"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#0d000000"
            android:layout_marginTop="@dimen/_5sdp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="?selectableItemBackground"
            android:textColor="@color/black_text_color_hint"
            android:text="Quay lại"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_gravity="center" />

    </LinearLayout>


</RelativeLayout>