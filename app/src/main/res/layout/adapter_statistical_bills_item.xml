<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statistical_bills_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/colorwhite_pressed">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp">

        <View
            android:id="@+id/statistical_bills_item_upper"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_above="@+id/statistical_bills_item_number"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/statistical_bills_item_number"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:background="@drawable/bg_greendark_rounded_button"
            android:textColor="@color/colorWhite"
            android:text="0"
            android:textSize="@dimen/_8sdp"
            android:gravity="center"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/statistical_bills_item_under"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_below="@+id/statistical_bills_item_number"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_45sdp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/statistical_bills_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/statistical_bills_item_line"
            android:paddingLeft="@dimen/_2sdp"
            android:text="Default"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_7sdp" />

        <View
            android:id="@+id/statistical_bills_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/statistical_bills_item_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statistical_bills_item_line"
            android:gravity="right"
            android:paddingRight="@dimen/_2sdp"
            android:text="Default"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_7sdp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/statistical_bills_item_content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/colorwhite_bordergrey_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorLightGrey">

            <TextView
                android:id="@+id/statistical_bills_item_signboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="a"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/statistical_bills_item_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="a"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/statistical_bills_item_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey"
            android:text="nhan vien"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/_7sdp"
            android:textStyle="italic"
            android:textColor="@color/black_text_color_hint"
            android:paddingRight="@dimen/_5sdp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/statistical_bills_item_rvproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:clipToPadding="true"
            android:paddingBottom="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:weightSum="3">

            <TextView
                android:id="@+id/statistical_bills_item_debt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/statistical_bills_item_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/statistical_bills_item_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Default"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
