<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:layout_marginTop="@dimen/_36sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cart_choice_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:background="@color/colorLightGrey">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tất cả hóa đơn"
                android:textStyle="italic"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_text_color_hint"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorLightGrey"
            android:orientation="horizontal"
            android:layout_below="@+id/customer_header">

            <TextView
                android:id="@+id/bill_detail_debt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorRed"
                android:text="con no"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/bill_detail_paid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black_text_color"
                android:text="con no"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/bill_detail_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorBlue"
                android:text="con no"
                android:textSize="@dimen/_10sdp"
                android:gravity="center_vertical|right"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bill_detail_rvbill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_55sdp"
            android:layout_below="@+id/cart_choice_header"/>
    </LinearLayout>

