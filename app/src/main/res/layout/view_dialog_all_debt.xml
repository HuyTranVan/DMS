<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_all_debt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_header_top"
            android:text="LIỆT KÊ CÔNG NỢ"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_text_color"
            android:gravity="center"/>

        <TextView
            android:id="@+id/statistical_debt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/colorRedDark"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/_5sdp"/>

        <wolve.dms.customviews.CTextIcon
            android:id="@+id/statistical_debt_sort"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:text="@string/icon_down"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5sdp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/statistical_debt_rvbill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_50sdp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_group"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorGrey"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.5"
            android:background="?selectableItemBackground"
            android:textColor="@color/black_text_color_hint"
            android:text="Quay lại"
            android:textSize="@dimen/_12sdp"
            android:textAllCaps="true"
            android:layout_gravity="center"/>



    </LinearLayout>



</RelativeLayout>