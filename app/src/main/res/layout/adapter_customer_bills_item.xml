<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp">

    <LinearLayout
        android:id="@+id/bills_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/bills_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"

            android:background="@color/colorLightGrey"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/bills_item_icon"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/bg_white_round_border_pressed"
                android:textColor="@color/black_text_color_hint"
                android:text="000"
                android:textSize="@dimen/_8sdp"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/bills_item_icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/bills_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default"
                    android:textColor="@color/black_text_color_hint"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:id="@+id/bills_item_deliver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_10sdp"
                    android:background="@drawable/btn_round_grey"
                    android:text="aaaa"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:gravity="center"/>
            </LinearLayout>


            <TextView
                android:id="@+id/bills_item_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_20sdp"
                android:background="@drawable/btn_round_border_red"
                android:gravity="right|center_vertical"
                android:text="Default"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_14sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/bills_item_delete"
                android:layout_centerVertical="true"/>

            <wolve.dms.customviews.CTextIcon
                android:id="@+id/bills_item_delete"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:text="@string/icon_menu"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_14sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Mua hàng:"-->
                <!--android:textSize="@dimen/_10sdp"-->
                <!--android:textColor="@color/black_text_color"-->
                <!--/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bills_item_rvproduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:clipToPadding="true" />

                <TextView
                    android:id="@+id/bills_item_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right|center_vertical"
                    android:text="Default"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/bills_item_note"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="@dimen/_10sdp"-->
                <!--android:textColor="@color/black_text_color"-->
                <!--android:textSize="@dimen/_8sdp" />-->


            <LinearLayout
                android:id="@+id/bills_item_payment_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_white_corner_stroke_grey"
                android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán:"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black_text_color"
                    android:textStyle="italic"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bills_item_rvpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bills_item_rvreturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bills_item_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_text_color_hint"
        android:gravity="center_horizontal|bottom"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hóa đơn chưa giao"
            android:textColor="@color/text_color_white_hint"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:minWidth="@dimen/_100sdp"
                android:background="@drawable/btn_cancel_grey"
                android:textColor="@color/colorWhite"
                android:text="Xóa"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_margin="@dimen/_10sdp"/>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:minWidth="@dimen/_100sdp"
                android:background="@drawable/btn_confirm_blue"
                android:textColor="@color/colorWhite"
                android:text="in - giao hàng"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>

