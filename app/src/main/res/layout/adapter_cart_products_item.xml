    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopcart_products_item_parent"
        android:background="@drawable/colorwhite_pressed"
        android:paddingTop="@dimen/_5sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shopcart_products_item_image"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_logo"
            app:civ_border_overlay="true"
            app:civ_fill_color="#d5d3d3"
            android:layout_centerVertical="true"/>


        <wolve.dms.customviews.CTextIcon
            android:id="@+id/shopcart_products_item_ribbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_bookmark"
            android:layout_marginLeft="@dimen/_2sdp"
            android:textColor="@color/yellow_pressed"
            android:textSize="@dimen/_14sdp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/shopcart_products_item_image"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shopcart_products_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/black_text_color"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/shopcart_products_item_unitprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textStyle="italic"
                        android:textColor="@color/black_text_color_hint"
                        android:textSize="@dimen/_8sdp"/>

                </LinearLayout>

                <!--<RelativeLayout-->
                <!--android:id="@+id/shopcart_products_item_quantity_group"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_marginRight="@dimen/_5sdp">-->

                <wolve.dms.customviews.CTextIcon
                    android:id="@+id/shopcart_products_item_sub"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bg_white_round_border_pressed"
                    android:text="@string/icon_minus"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/shopcart_products_item_quantity"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/shopcart_products_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/shopcart_products_item_plus"/>

                <wolve.dms.customviews.CTextIcon
                    android:id="@+id/shopcart_products_item_plus"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/bg_white_round_border_pressed"
                    android:text="@string/icon_plus"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>




                <!--</RelativeLayout>-->


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shopcart_products_item_quantity_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20,000"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorBlue"
                    android:paddingEnd="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/shopcart_products_item_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:text="20000"
                    android:textStyle="italic"
                    android:textColor="@color/black_text_color_hint"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            />

    </RelativeLayout>



