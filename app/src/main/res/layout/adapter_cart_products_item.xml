<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopcart_products_item_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/colorwhite_pressed">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shopcart_products_item_image"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_logo"
        app:civ_border_overlay="true"
        app:civ_fill_color="#d5d3d3"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/shopcart_products_item_image"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/shopcart_products_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/shopcart_products_item_unitprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20,000"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorBlue"
                android:paddingRight="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/shopcart_products_item_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:inputType="number"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_text_color"
                android:paddingRight="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp">

        <wolve.dms.customviews.CTextIcon
            android:id="@+id/shopcart_products_item_sub"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_white_round_border_pressed"
            android:text="@string/icon_minus"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black_text_color_hint"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/shopcart_products_item_quantity"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:text="0"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"/>

        <wolve.dms.customviews.CTextIcon
            android:id="@+id/shopcart_products_item_plus"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_white_round_border_pressed"
            android:text="@string/icon_plus"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black_text_color_hint"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_2sdp"/>



</RelativeLayout>