<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopcart_products_item_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/colorwhite_pressed"
    android:paddingTop="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shopcart_products_item_image"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/icon_lubricant_bottle"
        app:civ_border_overlay="true"
        app:civ_fill_color="#d5d3d3"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/shopcart_products_item_image"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shopcart_products_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="Sản phẩm"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/shopcart_products_item_unitprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="20,000"
                android:gravity="right"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorBlue"
                android:paddingRight="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_16sdp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Chiết khấu VNĐ:"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/shopcart_products_item_discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="0"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_text_color"
                android:paddingRight="@dimen/_5sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Số lượng:"
                android:textColor="@color/black_text_color_hint"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginRight="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.4">

                <wolve.dms.controls.CTextView
                    android:id="@+id/shopcart_products_item_sub"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="?selectableItemBackground"
                    android:text="@string/icon_up"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center"
                    android:rotation="270"
                    app:customFont="@string/font_awesome"/>

                <TextView
                    android:id="@+id/shopcart_products_item_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/colorwhite_cornerred"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"/>

                <wolve.dms.controls.CTextView
                    android:id="@+id/shopcart_products_item_plus"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="?selectableItemBackground"
                    android:text="@string/icon_up"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black_text_color_hint"
                    android:gravity="center"
                    android:rotation="90"
                    app:customFont="@string/font_awesome"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_2sdp"/>



</RelativeLayout>