<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_data_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <wolve.dms.customviews.CTextIcon
        android:id="@+id/input_data_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:text="@string/icon_product_group"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorBlueTransparent"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:gravity="center"/>

    <EditText
        android:id="@+id/input_data_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_35sdp"
        android:background="@color/float_transparent"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/black_text_color_hint"
        android:inputType="textCapSentences"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/input_data_icon"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/input_data_dropdown"
        />



    <wolve.dms.customviews.CTextIcon
        android:id="@+id/input_data_dropdown"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:text="@string/icon_edit_pen"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color_hint"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>




    <View
        android:id="@+id/input_data_underline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/colorGrey"
        android:layout_below="@+id/input_data_content"/>

</RelativeLayout>