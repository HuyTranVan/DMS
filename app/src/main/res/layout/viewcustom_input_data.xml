<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_data_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/input_data_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_35sdp"
        android:background="@color/colorWhite"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black_text_color"
        android:textColorHint="@color/black_text_color_hint"
        android:inputType="textCapSentences"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_25sdp"/>

    <wolve.dms.controls.CTextIcon
        android:id="@+id/input_data_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_product_group"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black_text_color_hint"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"/>

    <wolve.dms.controls.CTextIcon
        android:id="@+id/input_data_dropdown"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:background="@drawable/colorwhite_pressed"
        android:text="@string/icon_down"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black_text_color_hint"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/colorGrey"
        android:layout_gravity="bottom"/>

</FrameLayout>