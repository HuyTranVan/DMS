<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/product_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_header_top">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_18dp"
            android:padding="@dimen/_8sdp"
            android:background="?selectableItemBackground"/>

        <TextView
            android:id="@+id/update_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DANH SÁCH SẢN PHẨM"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black_text_color"/>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/color_group_header"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_10sdp">

                <wolve.dms.controls.CTextView
                    android:id="@+id/product_icon_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_heart"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorRed"
                    app:customFont="@string/font_awesome"
                    android:layout_centerVertical="true"/>


                <wolve.dms.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NHÓM SẢN PHẨM"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorRed"
                    android:layout_toRightOf="@+id/product_icon_group"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:customFont="@string/font_semibold"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/product_addgroup"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorRed"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ic_add_black_18dp"
                    android:padding="@dimen/_8sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_rvproductgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/color_group_header"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_10sdp">

                <wolve.dms.controls.CTextView
                    android:id="@+id/product_icon_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_heart"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorRed"
                    app:customFont="@string/font_awesome"
                    android:layout_centerVertical="true"/>


                <wolve.dms.controls.CTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SẢN PHẨM"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorRed"
                    android:layout_toRightOf="@+id/product_icon_product"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:customFont="@string/font_semibold"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/product_addproduct"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="match_parent"
                    android:tint="@color/colorRed"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ic_add_black_18dp"
                    android:padding="@dimen/_8sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_rvproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>





</RelativeLayout>