<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bills_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/colorwhite_pressed">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp">

        <View
            android:id="@+id/line_upper"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_above="@+id/customer_payment_item_count"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/customer_payment_item_count"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/bg_greendark_rounded_button"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/line_under"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_below="@+id/customer_payment_item_count"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/line_connect"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/customer_payment_item_total"/>

        <TextView
            android:id="@+id/customer_payment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_above="@+id/line_connect"/>

        <TextView
            android:id="@+id/customer_payment_item_paid"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/colorwhite_bordergrey_corner"
            android:text="Default"
            android:gravity="right"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/_12sdp"
            android:layout_toLeftOf="@+id/customer_payment_item_total"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/customer_payment_item_total"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/colorwhite_bordergrey_corner"
            android:text="Default"
            android:gravity="right"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>



        <!--<LinearLayout-->
