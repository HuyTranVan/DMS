<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summary_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/summary_item_icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:fontFamily="@font/font_awesome"
        android:background="@drawable/bg_oval_transparent_stroke_grey"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/icon_bill"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"/>

    

        <RelativeLayout
            android:id="@+id/summary_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/summary_item_icon"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/summary_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="a"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_text_color"
                />

            <TextView
                android:id="@+id/summary_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="xxxxx"
                android:textStyle="bold"
                android:textColor="@color/colorMain"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"/>

            
        </RelativeLayout>
    

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#f1f1f1"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
