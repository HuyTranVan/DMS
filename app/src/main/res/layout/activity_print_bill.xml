<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_text_color_hint"
    android:clickable="true"
    android:id="@+id/print_bill_parent">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="@drawable/ic_arrow_back_black_18dp"
        android:padding="@dimen/_8sdp"
        android:background="?selectableItemBackground"/>


    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/print_bill_mainlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/print_bill_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo_print"
                android:maxHeight="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÃ´ng ty"
                android:gravity="center"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/print_bill_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia chi"
                android:gravity="center"/>

            <TextView
                android:id="@+id/print_bill_hotline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotline"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/print_bill_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--------------------------"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/print_bill_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOA DON BAN HANG"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/print_bill_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_customername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_customerphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_customeraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website "
                android:layout_marginLeft="@dimen/_10sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_text_color_hint"
                android:layout_margin="@dimen/_10sdp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/print_bill_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_text_color_hint"
                android:layout_margin="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/print_bill_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tong "
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black_text_color"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/print_bill_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tra "
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_text_color_hint"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_remain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="con lai "
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_text_color_hint"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_orderphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="con lai "
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/print_bill_thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="con lai "
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>
    </ScrollView>

    <RadioGroup
        android:checkedButton="@+id/printer_57"
        android:id="@+id/printer_all"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/printer_57"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/toggle_widget_background_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="57mm"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp"
            />

        <RadioButton
            android:id="@+id/printer_80"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background_right"
            android:button="@null"
            android:gravity="center"
            android:text="80mm"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp"/>

    </RadioGroup>


</RelativeLayout>