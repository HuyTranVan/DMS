<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:id="@+id/map_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/map_loading"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:indeterminate="true"
            app:spb_sections_count="4"
            app:spb_color="@color/colorBlue"
            app:spb_speed="2.0"
            app:spb_stroke_width="4dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="false"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="false"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="-4dp"
            android:layout_below="@+id/map_searchview"/>

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/map_searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/map_new_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_95sdp"
        android:layout_gravity="bottom|right"
        fab:menu_fab_size="normal"
        fab:menu_colorNormal="#1565C0"
        fab:menu_colorPressed="#2272CD"
        fab:menu_colorRipple="#62B2FF">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_addphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_local_phone_white_18dp"
            app:fab_label="Nhập số điện thoại"
            style="@style/MenuButtonsStyleBlue"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_maintain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_white_18dp"
            app:fab_label="BẢO TRÌ"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_accessary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_white_18dp"
            app:fab_label="PHỤ TÙNG"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_wash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode_edit_white_18dp"
            app:fab_label="RỬA XE"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/map_new_repair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mode_edit_white_18dp"
            app:fab_label="SỬA XE"
            style="@style/MenuButtonsStyle" />

    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/map_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_my_location_black_18dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_gravity="bottom|right"
        app:fab_size="normal"/>

    <RadioGroup
        android:checkedButton="@+id/map_filter_all"
        android:id="@+id/map_filter"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp">

        <RadioButton
            android:id="@+id/map_filter_all"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/toggle_widget_background_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Tất cả"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp"
            />

        <RadioButton
            android:id="@+id/map_filter_interested"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="0.2dp"
            android:layout_marginRight="0.2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background_center"
            android:button="@null"
            android:gravity="center"
            android:text="Quan tâm"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp"/>

        <RadioButton
            android:id="@+id/map_filter_ordered"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background_right"
            android:button="@null"
            android:gravity="center"
            android:text="Đã mua"
            android:textColor="@drawable/text_white_selected"
            android:textSize="@dimen/_10sdp"/>

    </RadioGroup>

</android.support.design.widget.CoordinatorLayout>