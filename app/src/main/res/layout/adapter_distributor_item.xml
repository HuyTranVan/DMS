<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/distributor_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_none_white">

    <ImageView
        android:id="@+id/distributor_item_image"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/lub_logo_red_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/distributor_item_image"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/distributor_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/distributor_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default"
            android:textColor="@color/black_text_color_hint"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#0d000000"
        android:layout_alignParentBottom="true" />

</RelativeLayout>